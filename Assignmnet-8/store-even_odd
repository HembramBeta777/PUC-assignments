//PROGRAM:To store the even numbers into one array & odd numbers into another array
//FILE:assign8_3.c
//CREATED BY:SANTOSH HEMBRAM
//DATED:21-10-19

		#include<stdio.h>
		int main()
		{
			int	a[100],b[100],c[100],i,n,j=0,k=0;
			printf("Enter a range[max-100]-");
			scanf("%d",&n);
			printf("\nEnter the data to the array-");
			for(i=0;i<n;i++)
			scanf("%d",&a[i]);
			printf("\nDispay the data of the array-");
			for(i=0;i<n;i++)
			printf("\n%d",a[i]);
			for(i=0;i<n;i++)
			{		
				if(a[i]%2==0)
				{
					b[j]=a[i];
					j++;
				}
				else
				{
					c[k]=a[i];
					k++;
				}
			}
			printf("\nDispay the second array-");
			for(n=j,j=0;j<n;j++)
			{
				printf("\n%d",b[j]);
			}
			printf("\nDispay the third array-");
			for(n=k,k=0;k<n;k++)
			{
				printf("\n%d",c[k]);
			
			}
			return 0;
		}
